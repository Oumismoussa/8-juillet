{% extends 'base.html.twig' %}

{% block content %}
    <h1>Résultats de la recherche</h1>

    <p>Terme de recherche : {{ search_term }}</p>

    {% if results is empty %}
        <p>Aucun résultat trouvé.</p>
    {% else %}
        <ul>
            {% for result in results %}
                <li>{{ result }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
